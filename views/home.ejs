<%- include('./partials/header') -%>

<link rel="stylesheet" href="style.css">

<div class="home-container">
    <h2>Created to arrange multiple projects at one place.</h2>
    <hr>
    <h2>These are all my projects created with nodejs and reactjs</h2>
    <p></p>
    <h2>Click on them to view the github link and deployed link.</h2>
</div>

<link rel="stylesheet" href="project.css">

<script src="https://kit.fontawesome.com/a6c541db65.js" crossorigin="anonymous"></script>

<div class="project-display-container">
    <% projects.map((project) => { %>
        <div class="card-container">
            <div class="flip-card">
                <div class="flip-card-inner">
                <div class="flip-card-front">
                    <img src="<%= project.imgLink %>" alt="projectImg" style="width:300px;height:300px;">
                </div>
                <div class="flip-card-back">
                    <a href="/project%20management/admin/project%20info/<%=project.id%>" class="info-link" style="background-color: #F0DB4F; border: 1.5px solid #000; border-radius: 50%;">
                        <i class="fas fa-info" style="color: blue; font-size: 1.2rem; padding: 3px 5px; background-color: #F0DB4F;"></i>
                    </a>
                    <h1 class="project-title"><%= project.title %></h1> 
                    <a href="<%= project.githubLink %>" target="_blank">GitHub Link</a>
                    <a href="<%= project.deployedLink %>" target="_blank">Deployed Link</a>
                    <div class="action-btn-container">
                        <form action="/project/delete/<%= project.id %>" method="post" class="action-form">
                            <button type="submit">
                                <i class="fas fa-trash" style="color: red;"></i>
                            </button>
                        </form>
                    </div>
                </div>
                </div>
            </div>
        </div>
    <% }); %>
</div>

<%- include('./partials/footer') -%>
