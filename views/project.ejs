<%- include('./partials/header') -%>
<link rel="stylesheet" href="display.css">

<script src="https://kit.fontawesome.com/a6c541db65.js" crossorigin="anonymous"></script>

<div class="projects">
    <h2>These all the projects which i have created and deployed on Heroku.</h2>
    <hr>
    <div class="project-container">
        <% projects.map((project) => { %>
            <div class="card-container">
                <div class="flip-card">
                    <div class="flip-card-inner">
                    <div class="flip-card-front">
                        <img src="<%= project.imgLink %>" alt="Avatar" style="width:300px;height:300px;">
                    </div>
                    <div class="flip-card-back">
                        <h1 class="project-title"><%= project.title %></h1> 
                        <a href="<%= project.githubLink %>" target="_blank">GitHub Link</a>
                        <a href="<%= project.deployedLink %>" target="_blank">Deployed Link</a>
                        <form action="/project/delete/<%= project.id %>" method="post" class="del-form">
                            <button type="submit">
                                <i class="fas fa-trash"></i>
                            </button>
                        </form>
                    </div>
                    </div>
                </div>
            </div>
        <% }); %>
    </div>
</div>

<%- include('./partials/footer') -%>