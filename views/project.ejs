<%- include('./partials/header') -%>
<link rel="stylesheet" href="project.css">

<script src="https://kit.fontawesome.com/a6c541db65.js" crossorigin="anonymous"></script>

<div class="projects">
    <h2>These are all the projects which i have created and deployed on Heroku.</h2>
    <hr>
    <div class="project-container">
        <% projects.map((project) => { %>
            <div class="card-container">
                <div class="flip-card">
                    <div class="flip-card-inner">
                        <div class="flip-card-front">
                            <img src="<%= project.imgLink %>" alt="Avatar" style="width:300px;height:300px;">
                        </div>
                        <div class="flip-card-back">
                            <a href="/project%20management/admin/project%20info/<%=project.id%>" class="info-link" style="background-color: #F0DB4F; border: 1.5px solid #000; border-radius: 50%;">
                                <i class="fas fa-info" style="color: blue; font-size: 1.2rem; padding: 3px 5px; background-color: #F0DB4F;"></i>
                            </a>
                            <h1 class="project-title"><%= project.title %></h1> 
                            <a href="<%= project.githubLink %>" target="_blank">GitHub Link</a>
                            <a href="<%= project.deployedLink %>" target="_blank">Deployed Link</a>
                            <div class="action-btn-container">
                                <form action="/project/delete/<%= project.id %>" method="post" class="action-form">
                                    <button type="submit">
                                        <i class="fas fa-trash del" style="color: red;"></i>
                                    </button>
                                </form>
                            </div>
                    </div>
                    </div>
                </div>
            </div>
        <% }); %>
    </div>
</div>

<%- include('./partials/footer') -%>